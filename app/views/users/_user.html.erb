 <% @users.each do |user| %>
      <li class="media">
       <p class="mr-2 rounded"><%= gravatar_for user, size: 50 %></p>
        <div class="media-body">
          <div>
            <%= user.name %>
          </div>
          <div>
            <p><%= link_to 'View profile', user_path(user) %></p>
          </div>
        </div>
      </li>
    <% end %>