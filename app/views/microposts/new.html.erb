
<div>
      <%= form_with(model: @micropost, local: true) do |f| %>
      
        <%= f.file_field :image %>
        
          <div class='form-group'>
            <p>撮影日時</p>
       <%= f.label :time, class: 'control-label' %>
        <%= f.datetime_field :time, class: 'form-control' %>
        </div>
      
        <div class="form-group">
          <p>撮影場所</p>
          <%= f.text_area :place, class: 'form-control', rows: 1 %>
        </div>
        
         <div class="form-group">
           <p>移動手段</p>
          <%= f.text_area :move, class: 'form-control', rows: 1 %>
        </div>
        
         <div class="form-group">
           <p>必要な物</p>
          <%= f.text_area :necessary, class: 'form-control', rows: 2 %>
        </div>
        
         <div class="form-group">
           <p>コメント</p>
          <%= f.text_area :content, class: 'form-control', rows: 5 %>
        </div>
       
        <%= f.submit 'Post', class: 'btn btn-primary btn-block' %>
      <% end %>
    
</div>